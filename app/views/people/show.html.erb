<h1><%= @person.name %></h1>

<%= link_to 'Edit', edit_person_path(@person) %>
<%= link_to 'Delete', person_path(@person), method: :delete, data: {confirm: 'You sure?'} %>
<hr />

<p>
	This persons age is: <strong><%= @person.age %></strong>
</p>

<p>
	This persons gender is: <strong><%= @person.gender %></strong>
</p>

<h4>
	Is alive <%= @person.alive ? 'Yes' : 'No' %>
</h4>

<%= link_to "#{@person.name.pluralize} Animals", 
person_animals_path(@person) %>